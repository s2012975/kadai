<div class="">

  <h1>Editing Book</h1>
    <%= form_for(@book) do |f| %>
      <p>Title</p>
      <%= f.text_field :title , class: "edit-title"%>
      <p>Opinion</p>
      <%= f.text_area :body , class: "edit-body"%>
      <%= f.submit "Update Book" %>
    <% end %>

  <p>
    <%= link_to "show", book_path %> |
    <a href="/books">Back</a>
  </p>

</div>