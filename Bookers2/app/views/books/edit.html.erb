<div class="book-edit-main">

  <h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <div class="error-message">
      <div class="alert alert-warning">
        <ul>
        	<p>error</p>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

    <%= form_for(@book) do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title , class: "edit-title"%>
      <h4>Opinion</h4>
      <%= f.text_area :body , class: "edit-body"%><br>
      <%= f.submit "Update Book" %>
    <% end %>

  <p>
    <%= link_to "Show", book_path %> |
    <a href="/books">Back</a>
  </p>

</div>