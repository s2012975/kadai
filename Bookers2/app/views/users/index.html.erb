<div class="container">
  <div class="row">
 	  <div class="col-xs-3" style="">

	 		<h1>User info</h1>
	 		  <% if @user.profile_image != nil %>
	        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
	      <% else %>
	        <%= image_tag 'no_image_square', style: "height: 150px" %>
	      <% end %>

	 		<table class="table table-striped">
	 			<tbody>
	 				<tr>
	 				  <td>Name</td>
	 				  <td><%= @user.name %></td>
	 				</tr>
	 				<tr>
	 					<td>Introduction</td>
	 					<td><%= @user.introduction %></td>
	 				</tr>
	 			</tbody>
	 		</table>

      <div class="user-edit">
		    <% if current_user.id == @user.id %>
		      <%= link_to(edit_user_path(current_user.id), class: "user-edit-icon") do %>
				    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		      <% end %>
		    <% end %>
	    </div>


	    <h1>New book</h1>
	      <%= form_for(@book) do |f| %>
				  <p>Title</p>
				    <%= f.text_field :title , class: "new-book-title"%>
				  <p>Opinion</p>
				    <%= f.text_area :body, class: "new-book-body"%>
				  <br>
				    <%= f.submit 'Create Book', class: "new-create-book btn-primary" %>
	      <% end %>

    </div>

	  <div class="col-xs-9">

	    <h1>Users</h1>

    	<table class="table table-striped">
    		<thead>
    			<tr>
    				<th><P>image</P></th>
    				<th><P>name</P></th>
    				<th><P></P></th>
    			</tr>
    		</thead>
    	  <tbody>
    	  <% @users.each do |user| %>
    			<tr class="new-table">
    				<td>
    					<span>
                <% if user.profile_image != nil %>
                  <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image_square.jpg", size:'50x50' %>
                <% else %>
                  <%= image_tag 'no_image_square.jpg', style: "height: 50px" %>
                <% end %>
              </span>
            </td>
    			  <td>
    			  	<span>
    			  		<%= user.name %>
    			    </span>
    			  </td>
    			  <td>
    			  	<span>
    			  		<%= link_to "Show",user_path(user) %>
    			  	</span>
    			  </td>
    			</tr>
    	  <% end %>
    		</tbody>
    	</table>

	  </div>

  </div>
</div>

