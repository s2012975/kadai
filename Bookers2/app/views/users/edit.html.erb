<div class="userinfo">

<h1>User info</h1>

  <%= form_for(@user) do |f| %>

    <h4>name</h4>
    <%= f.text_area :name %>

    <h4>image</h4>
    <%= f.attachment_field :profile_image%>

    <h4>introduction</h4>
    <%= f.text_area :introduction %>

    <%= f.submit 'Update User' %>

  <% end %>
</div>
