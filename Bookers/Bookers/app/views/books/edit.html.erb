<body>
  <h2>Editing Book</h2>
    <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <p>
      <%= f.submit "Update Book" %>
    </p>
    <% end %>

  <div class="under-menu">
    <%= link_to "Show", book_path(@book.id) %> |
    <%= link_to "Back", books_path %>
  </div>

</body>